{
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": ["airbnb-base", "prettier"],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "radix": ["error", "as-needed"],
      "func-names": ["warn", "as-needed"],
      "prefer-arrow-callback": "warn",
      "no-loop-func": "warn",
      "no-plusplus": ["warn", { "allowForLoopAfterthoughts": true }],
      "quotes": ["warn", "double"],
      "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "always",
          "jsx": "never",
          "ts": "never",
          "tsx": "never"
        }
     ]
   }
  }
  